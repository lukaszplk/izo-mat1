# IZO-MAT Universal .htaccess
# Simple version that works on both localhost and production

RewriteEngine On

# Force HTTPS for production domains only
RewriteCond %{HTTP_HOST} ^(www\.)?lplk\.org\.pl$ [NC]
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Force www to non-www for lplk.org.pl
RewriteCond %{HTTP_HOST} ^www\.lplk\.org\.pl$ [NC]
RewriteRule ^(.*)$ https://lplk.org.pl/$1 [R=301,L]

# Default index files
DirectoryIndex index.php index.html

# Prevent directory browsing
Options -Indexes